public class O1_Variable {
	public static void main(String[] args) {

		String z = "Selenium";
		char x = 'x';
		int a = 10;
		System.out.println("the string out put is " + z);

		System.out.println("the integer out put is " + a);
		System.out.println("the char x out put is " + x);

	}
}

