public class OO005handleImage {

	public static void main(String[] args) throws InterruptedException {
		String baseUrl = "https://www.rediff.com/";
		WebDriver driver = new ChromeDriver();

		driver.get(baseUrl);
		List<WebElement> linkElements = driver.findElements(By.tagName("img"));
		// String[] linkTexts = new String[linkElements.size()];
		// int i = 0;
		int i = linkElements.size();
		System.out.println(i);

		// extract the link texts of each link element
		// for (WebElement e : linkElements) {
		// linkTexts[i] = e.getText();
		// i++;
		// }
		int j = 0;
		// // test each link
		for (WebElement t : linkElements) {
			Thread.sleep(5000);
			String src = t.getAttribute("src");
			System.out.println(src);

			// System.out.println(t);
			Thread.sleep(5000);
			//
			if (src.length() < 1) {
				System.out.println("passing");
				t.click();
				Thread.sleep(5000);
				driver.get(baseUrl)

			} else {
//				t.click();
//				Thread.sleep(5000);
//				driver.get(baseUrl);
				System.out.println("passing");

			}
			//
			// System.out.println(t);
			//
			// // driver.findElement(By.linkText(t)).click();
			// // Thread.sleep(2000);
			// if (j != 0) {
			// driver.navigate().back();
			// System.out.println("navigating back");
			//
			// }
			// // System.out.println("navigating back");
			j++;
		}
		driver.quit();
	}
}